
pipeline {
    agent any
    
    environment {
        PROJECT_DIR = '.'
        FRONTEND_DIR = "${PROJECT_DIR}/frontend"
        BACKEND_DIR = "${PROJECT_DIR}/BE/pyeonriham"
        DOCKER_FRONTEND_IMAGE = 'yes130/pyeonriham-fe'
        DOCKER_BACKEND_IMAGE = 'yes130/pyeonriham-be'
        DOCKER_HUB_CREDENTIAL_ID = 'hyerin'
        IMAGE_TAG = 'latest'
        // VITE_APP_BASE_URL = 'TBD'  // 나중에 설정
    }
    
    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git url: 'https://lab.ssafy.com/s13-final/S13P31A105.git', 
                    branch: 'release', 
                    credentialsId: 'jenkins-token'
            }
        }
        
        stage('Build Backend') {
            steps {
                echo 'Backend 빌드를 시작합니다.'
                dir(BACKEND_DIR) {
                    script {
                        if (fileExists('./gradlew')) {
                            sh 'chmod +x ./gradlew'
                            sh './gradlew clean build -x test'
                        } else {
                            echo 'gradlew 파일이 없습니다. 빌드를 건너뜁니다.'
                        }
                    }
                }
            }
        }
        
        stage('Build Frontend') {
            tools {
                nodejs 'NodeJS-LTS' 
            }
            steps {
                echo 'Frontend 빌드를 시작합니다.'
                dir(FRONTEND_DIR) {
                    script {
                        if (fileExists('package.json')) {
                            sh 'npm install'
                            sh 'npm run build'
                        } else {
                            echo 'package.json이 없습니다. 빌드를 건너뜁니다.'
                        }
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                echo '테스트 단계 (현재는 빌드 확인만)'
                sh 'echo "Frontend + Backend 빌드 완료"'
            }
        }
    }
    
    post {
        success {
            echo 'Frontend + Backend 파이프라인 성공!'
            cleanWs()
        }
        failure {
            echo 'Frontend + Backend 파이프라인 실패'
        }
    }
}
